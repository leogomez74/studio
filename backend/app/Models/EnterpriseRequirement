<?php

declare(strict_types=1);

namespace App\Models;

use Illuminate\Database\Eloquent\Factories\HasFactory;
use Illuminate\Database\Eloquent\Model;

class EnterpriseRequirement extends Model
{
    use HasFactory;

    protected $fillable = [
        'enterprise_employee_document_id',
        'file_extension',
        'binary',
        'upload_date',
        'last_updated',
    ];

    protected $casts = [
        'upload_date' => 'date',
        'last_updated' => 'date',
    ];

    public function document()
    {
        return $this->belongsTo(Enterprise::class);
    }
}
